$naranja = #F57B13
$naranja-oscuro-1 = #B95907
$naranja-oscuro-2 = #3A1C02
$plomo-claro = #BEBCBB
$plomo-claro-2 = #F5F5F5
$negro = #151614
$fontOpenSans = 'Open Sans'
$fontRaleway = 'Raleway'
$fontTiti = 'Titillium Web'

/* ENCABEZADOS */
h1,h2,h3,h4,h5,h6
	font-family $fontTiti
	font-weight 700
	text-transform uppercase
	
a
	color $negro
	text-decoration none
	
	&:focus, &:hover
		color $naranja
		text-decoration none

/* HEADER */
header
	margin-bottom 20px

/* SOCIAL MEDIA */
p.social-skew
	background $naranja
	height 50px
	margin-top 0px
	position relative
	width 100%
	padding-left 70px
	
	a
		margin-top 15px
		margin-left 8px
		display inline-block
		color #fff
		transition all 0.4s ease
		
		&:hover
			color $negro
		
		& i.fa
			font-size 18px
	
	&:before
		border-right 50px solid transparent
		border-top 50px solid $negro
		content ""
		height 0
		left 0
		position absolute
		top 0
		width 0

/* BARRA SUPERIOR */
#topbar
	background $negro
	position relative
	overflow hidden
	
	p
		i
			margin-right 10px
	
	.email-address
		
		a
			color $plomo-claro
		
	.address, .email-address
		color $plomo-claro
		font-family $fontOpenSans
		font-size 16px
		margin-top 15px
	
	.address, .email-address, .social
		
		p
			margin-bottom 0px
			font-size 14px
	
	span
		
		&.topbar-right
			position absolute
			left 75%
			width 100%
			background $naranja
			height 50px

/* MENU SUPERIOR */
#main-navigation
	position absolute
	top 50px !important
	width 100%
	transition all 0.9s ease
	z-index 100
	
	.logo
		
		img
			height 40px

.navbar
	border-radius 0
	padding 16px 0
	margin-bottom 0px
	transition all 0.5s ease
	
	&>.container
		
		.navbar-brand
			margin-left 0
			padding 0
			height auto
			
			img
				display block

.navbar-collapse
	
	&.collapse
		margin-top 10px


.navbar-default
	background-color rgba(21,22,20,0.7)
	border-color transparent
	
	.navbar-nav
		
		&>.active
			
			&>a, &>a:focus, &>a:hover
				background-color transparent
				color $negro
				padding-top 5px
				padding-bottom 5px

		
		&>li
			font-family $fontRaleway
			background rgba(255,168,0,0)
			color #fff
			font-size 14px
			margin-left 10px
			text-transform uppercase
			transition all 0.4s ease
			
			&>a
				color #fff
				padding-top 5px
				padding-bottom 5px
			
			&.active, &:hover
				background $naranja
				color $negro
				border-radius 15px

/* SLIDER */
.tp-banner-container
	width 100%
	position relative
	padding 0

.slider-interno
	width 100%
	height 180px
	background-image url('/imagenes/sprinter.jpg')
	background-size cover
	background-position-y 20%


/* BLOG */
.blog-nota-item, .blog-nota
	display block
	float left
	margin-bottom 20px
	
	.titulo-fecha
		margin-bottom 5px
		
		h2
			margin-bottom 0
		
		time
			font-size 11px
			text-transform uppercase
	
	.contenido
		
		a.leer-nota
			background-color $naranja
			color #fff
			float right
			font-size 18px
			margin-top 20px
			padding 15px 60px
			border-radius 5px

.blog-nota
	
	.titulo-fecha
		
		h2
			font-size 42px
			margin 10px 0
		
		p
			font-size 16px
			
	
	.imagen
		margin-bottom 10px
	
	.contenido
		font-size 16px
		
		p
			line-height 150%


/* GALERIA DE FOTOS */
#galeria-fotos
	
	.titulo-multimedia
		font-size 32px
		border-bottom 1px solid $plomo-claro
	
	.blog-nota-item
		
		&.nth-child-odd
			clear both
		
		.titulo-fecha
			
			h2
				font-size 18px
				margin 5px 0 15px 0
	
	.row.more
		
		.blog-nota-item
			
			.titulo-fecha
				border-left 8px solid $naranja
				height 75px
				margin-bottom 15px
				padding 0px 15px
			
				h2
					font-size 20px
					font-weight 400
					line-height 24px
					text-transform none
					margin-bottom 5px
			
	

/* PATROCINADORES */
#patrocinadores
	
	li
		display inline-block
		margin 10px
		border 1px solid #ccc
		padding 15px 50px

/* SOCIAL MEDIA */
#orange-social
	padding 10px 20px
	background $plomo-claro-2
	border-bottom 3px solid $naranja-oscuro-2
	margin 30px 0 0 0
	
	h3
		text-align center
		margin-top 3px
		margin-bottom 3px
		display block
		font-size 38px
		font-family $fontTiti
		color #000
		font-weight 400
		text-transform uppercase
	
	ul
		padding 0
		text-align center
		
		li
			display inline-block
			
			a
				margin-top 20px
				color $naranja-oscuro-2
				float left
				width 105px
				text-align center
				border-right 1px solid $plomo-claro
				text-decoration non
				
				&:hover
					opacity 0.8
			
			&:last-child
				
				a
					border none
					

/* ENLACE BICICENTRO */
.enter-shop
	margin-top 30px
	border-bottom 3px solid #b95907
	background-color #ec6606
	padding 10px 20px
	
	a
		display block
		width 100%
		text-align center
	
	img
		width 100%
		margin-top 10px
	
	.enter-shop-link
		color #f5f5f5
		font-size 28px
		font-weight bold
		font-family 'Titillium Web'
		text-decoration none
		text-align right
		width 100%
		display block
		margin-top -3px
		
		&:hover
			text-decoration underline
	
	&.interior-enter-shop
		
		.enter-shop-link
			margin-top 20px


/* PUBLICIDAD */
.publicidad-centro
	margin 20px 0


/* FOTOS Y VIDEOS */
.galeria-home
	background-color $plomo-claro-2
	padding 20px 0
			
	#home-fotos
		
		ul
			list-style none
			margin 0
			padding 0
			
			li
				display inline-block
				margin 13px


/* INTERIOR */

.categories-list
	
	ul
		margin 0
		padding 0
		list-style none
			
		li
			border-top 1px #f0f0f0 solid
			border-bottom 1px #f0f0f0 solid
			margin-top -1px
			
			a
				position relative
				font-size 13px
				color #333232
				font-weight 500
				line-height 17px
				padding 15px 40px 15px 0
				display block
				transition all 0.15s ease-out
				
				&:before
					display inline-block
					font normal normal normal 14px/1 FontAwesome
					font-size 16px
					text-rendering auto
					-webkit-font-smoothing antialiased
					content "\f101"
					padding-right 5px
				
				&:hover
					color #d14242
				
				span
					position absolute
					line-height 47px
					top 0
					right 0
					font-weight 600
					color #828282


/* VIDEO */
#interior-video, #interior-fotos
	
	.datos
		
		h3
			font-size 18px
			margin-top 0
	
/* FOTOS */
#interior-fotos
	
	.fotos
		float left
		
		ul
			list-style none
			margin 0
			padding 0
			
			li
				margin 5px 0


/* FOOTER */
footer
	background-color $negro
	color $plomo-claro
	padding 20px 0
	text-align center
	margin-top 20px